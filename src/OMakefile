CXXFILES[] = main

.SCANNER: %.o: %.cpp
	$(CXX) -std=c++11 $(INCLUDE) -MM $<

%.o: %.cpp
	$(CXX) -c $(CXXFLAGS) $< -o $@

resource.o: resource.rc
	windres $^ $@

../$(PROGRAM): $(addsuffix .o, $(CXXFILES)) resource.o
	$(CXX) $(LDFLAGS) $^ $(LIBS) -o $@

all: ../$(PROGRAM)

clean:
	rm -rf $(filter-proper-targets $(ls R, .))

.DEFAULT: all
